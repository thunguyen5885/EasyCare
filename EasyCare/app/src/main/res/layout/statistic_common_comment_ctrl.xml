<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/ivCommonCommentPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
        />
    </FrameLayout>
    <TextView
        android:id="@+id/tvCommonCommentTitle"
        style="@style/DefaultNormalTextView"
        android:layout_width="130dp"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        android:textStyle="bold"
        android:text="@string/statistic_waiting_dating"/>
    <TextView
        style="@style/DefaultNormalTextView"
        android:layout_gravity="center_vertical"
        android:text=":"/>
    <TextView
        android:id="@+id/tvCommonCommentContent"
        android:layout_gravity="center_vertical"
        style="@style/DefaultNormalTextView"
        android:layout_marginLeft="@dimen/home_item_separator_size"/>
    <TextView
        android:id="@+id/tvCommonCommentSeeMore"
        style="@style/HighLightNormalTextView"
        android:layout_marginLeft="@dimen/home_item_separator_size"
        android:layout_gravity="center_vertical"
        android:text="@string/statistic_see_more"
        android:visibility="gone"/>
</LinearLayout>