<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llApointmentListForAPatientLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background_color">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/patient_list_background">
        <TextView
            style="@style/DefaultLightLargeTextView"
            android:text="@string/appointment_for_a_patient"
            android:textColor="@color/textview_color_highlight_tab"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_padding"/>
        <vn.easycare.layers.ui.components.views.foreground.ForegroundLinearLayout
            android:id="@+id/refreshLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/home_item_separator_size"
            android:layout_marginRight="@dimen/common_padding"
            android:clickable="true"
            android:layout_gravity="center_vertical|right">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_refresh"/>
        </vn.easycare.layers.ui.components.views.foreground.ForegroundLinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/home_item_separator_size"
        android:paddingBottom="@dimen/home_item_separator_size"
        android:background="@color/white">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_marginRight="@dimen/common_padding">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/patientAvatarThumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitStart"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvPatientName"
                style="@style/DefaultSmallTextView"
                android:textStyle="bold"
                android:textColor="@color/textview_color_highlight"
                android:layout_marginTop="-2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/home_item_separator_size">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_birthday"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvPatientBirthday"
                    style="@style/DefaultSmallTextView"
                    android:layout_marginLeft="@dimen/common_padding"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_phone"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvPatientPhone"
                    style="@style/DefaultSmallTextView"
                    android:layout_marginLeft="@dimen/common_padding"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_email"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvPatientEmail"
                    style="@style/DefaultSmallTextView"
                    android:layout_marginLeft="@dimen/common_padding"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvPatientLocation"
                    style="@style/DefaultSmallTextView"
                    android:singleLine="false"
                    android:layout_marginLeft="@dimen/common_padding"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/footer_item_separator_background_color"/>
    <vn.easycare.layers.ui.components.views.TabLayout
        android:id="@+id/appointmentListTabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_background_color"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/appointmentListViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
</LinearLayout>