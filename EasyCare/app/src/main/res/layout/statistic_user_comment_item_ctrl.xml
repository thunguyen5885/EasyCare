<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/ivUserCommentPoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_common_comment"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tvUserCommentTitle"
            style="@style/DefaultNormalTextView"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textStyle="bold"
            android:text="@string/statistic_common_comment"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="80dp">
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/layout_carousel_indicator_background"/>
        <TextView
            style="@style/DefaultNormalTextView"
            android:layout_width="140dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/home_item_separator_size"
            android:gravity="left"
            android:text="@string/statistic_comment_count"/>
        <TextView
            style="@style/DefaultNormalTextView"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text=":"/>
        <TextView
            android:id="@+id/tvUserCommentCommentCount"
            android:layout_marginLeft="@dimen/home_item_separator_size"
            style="@style/DefaultNormalTextView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/home_item_separator_size"
        android:layout_marginLeft="80dp">
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/layout_carousel_indicator_background"/>
        <TextView
            style="@style/DefaultNormalTextView"
            android:layout_width="140dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/home_item_separator_size"
            android:gravity="left"
            android:text="@string/statistic_rate_average"/>
        <TextView
            style="@style/DefaultNormalTextView"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text=":"/>
        <TextView
            android:id="@+id/tvUserCommentAverageRate"
            android:layout_marginLeft="@dimen/home_item_separator_size"
            android:layout_gravity="center_vertical"
            style="@style/DefaultNormalTextView"/>
    </LinearLayout>
</LinearLayout>