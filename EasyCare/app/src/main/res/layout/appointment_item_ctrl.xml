<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_marginRight="@dimen/common_padding">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/patientAvatarThumb"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPatientName"
                    style="@style/DefaultSmallTextView"
                    android:textStyle="bold"
                    android:textColor="@color/textview_color_highlight"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    style="@style/DefaultSmallTextView"
                    android:textStyle="bold"
                    android:textColor="@color/textview_color_highlight"
                    android:text="-"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="@dimen/home_item_separator_size"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar_active"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvAppointmentTime"
                    style="@style/HighLightSmallTextView"
                    android:textStyle="italic"
                    android:layout_marginLeft="@dimen/home_item_separator_size"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvPatientDisease"
                style="@style/DefaultNormalTextView"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/home_item_separator_size"
                />
            <LinearLayout
                android:id="@+id/appointmentListButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/home_item_separator_size"
                android:layout_marginRight="@dimen/common_padding">
                <TextView
                    android:id="@+id/btnCalendarChange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/appointment_list_calendar_change"
                    android:textColor="@color/header_background_color"
                    android:textSize="@dimen/text_small"
                    android:layout_marginRight="@dimen/home_item_separator_size"
                    android:background="@drawable/layout_item_selector_with_corner_hightlight_border"/>
                <TextView
                    android:id="@+id/btnCalendarCancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/appointment_list_cancel"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/header_background_color"
                    android:layout_marginRight="@dimen/home_item_separator_size"
                    android:background="@drawable/layout_item_selector_with_corner_hightlight_border"/>
                <TextView
                    android:id="@+id/btnCalendarAccept"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/appointment_list_accept"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/header_background_color"
                    android:layout_marginRight="@dimen/home_item_separator_size"
                    android:background="@drawable/layout_item_selector_with_corner_hightlight_border"/>
             </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/bottomIndicator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/footer_item_separator_background_color"
        android:layout_marginTop="@dimen/common_padding"
        android:layout_marginBottom="@dimen/common_padding"/>
    <View
        android:id="@+id/endOfListIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_padding"/>
</LinearLayout>