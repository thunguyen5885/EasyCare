<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlDateControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/flPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            android:clickable="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_previous"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tvDate"
            style="@style/DefaultBoldLargeTextView"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/flNext"
            android:layout_toRightOf="@+id/flPrevious"
            android:gravity="center"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <View
        android:id="@+id/vSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlDateControl"
        android:background="@color/footer_item_separator_background_color"/>
    <LinearLayout
        android:id="@+id/llHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_padding"
        android:layout_marginBottom="@dimen/common_padding"
        android:layout_marginLeft="@dimen/common_padding_5dp"
        android:layout_marginRight="@dimen/common_padding_5dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <include
                android:id="@+id/emptyHintColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/hint_color_item_ctrl"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <include
                android:id="@+id/waitingConfirmedHintColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/hint_color_item_ctrl"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <include
                android:id="@+id/confirmedHintColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/hint_color_item_ctrl"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <include
                android:id="@+id/treatedHintColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/hint_color_item_ctrl"/>
        </FrameLayout>
    </LinearLayout>
    <GridView
        android:id="@+id/gvCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vSeparator"
        android:layout_above="@+id/llHint"
        android:padding="@dimen/common_padding"
        android:scrollbars="none"
        android:numColumns="5">
    </GridView>
</RelativeLayout>