<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llStatisticLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/mainStatisticLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/common_padding"
                android:layout_marginRight="@dimen/common_padding"
                android:layout_marginBottom="@dimen/footer_vertical_padding">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/statistic_vertical_padding">
                    <TextView
                        style="@style/DefaultLargeTextView"
                        android:textStyle="bold"
                        android:text="@string/statistic_common_info"
                        android:layout_centerVertical="true"/>
                    <vn.easycare.layers.ui.components.views.foreground.ForegroundLinearLayout
                        android:id="@+id/refreshLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/home_item_separator_size"
                        android:background="@drawable/layout_hightlight_button_with_corner"
                        custom:foreground="@drawable/layout_item_selector_with_corner"
                        android:clickable="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_refresh"/>
                    </vn.easycare.layers.ui.components.views.foreground.ForegroundLinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/statistic_vertical_padding"
                    android:background="@color/footer_item_separator_background_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/layout_button_with_corner"
                    android:layout_marginTop="@dimen/statistic_vertical_padding"
                    android:paddingTop="@dimen/common_padding"
                    android:paddingBottom="@dimen/common_padding">
                    <include
                        android:id="@+id/statisticDetailInfoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/statistic_common_comment_ctrl"/>
                    <include
                        android:id="@+id/statisticOrderCountLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_padding"
                        layout="@layout/statistic_common_comment_ctrl"/>
                    <include
                        android:id="@+id/statisticWaitingDatingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_padding"
                        layout="@layout/statistic_common_comment_ctrl"/>
                </LinearLayout>
                <TextView
                    style="@style/DefaultNormalTextView"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/statistic_vertical_padding"
                    android:text="@string/statistic_user_comment"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/layout_button_with_corner"
                    android:layout_marginTop="@dimen/statistic_vertical_padding"
                    android:paddingTop="@dimen/common_padding"
                    android:paddingBottom="@dimen/common_padding">
                    <include
                        android:id="@+id/statisticCommonCommentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/statistic_user_comment_item_ctrl"/>
                    <include
                        android:id="@+id/statisticWaitingCommentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_padding"
                        layout="@layout/statistic_user_comment_item_ctrl"/>
                    <include
                        android:id="@+id/statisticAssetCommentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_padding"
                        layout="@layout/statistic_user_comment_item_ctrl"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center"
        android:visibility="gone"/>
</FrameLayout>