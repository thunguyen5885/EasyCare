<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginRight="@dimen/common_padding"
        android:layout_marginTop="@dimen/statistic_vertical_padding"
        android:layout_marginBottom="@dimen/statistic_vertical_padding">
        <vn.easycare.layers.ui.components.views.foreground.ForegroundRelativeLayout
            android:id="@+id/datingListSearchLayout"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@drawable/layout_hightlight_button_with_corner"
            custom:foreground="@drawable/layout_item_selector_with_corner">
            <TextView
                android:id="@+id/tvSearch"
                style="@style/DefaultSmallTextView"
                android:textColor="@color/white"
                android:text="@string/dating_list_search"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                />
        </vn.easycare.layers.ui.components.views.foreground.ForegroundRelativeLayout>
        <EditText
            android:id="@+id/edtDatingCode"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@drawable/layout_button_with_corner"
            android:textColorHint="@color/textview_color_grey"
            android:hint="@string/dating_list_dating_code"
            android:textColor="@color/textview_color_default"
            android:textSize="@dimen/text_small"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/edtPatientName"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@drawable/layout_button_with_corner"
            android:textColorHint="@color/textview_color_grey"
            android:hint="@string/dating_list_patient_name"
            android:textColor="@color/textview_color_default"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/home_item_separator_size"
            android:layout_toRightOf="@+id/edtDatingCode"/>
        <RelativeLayout
            android:id="@+id/rlSelectCalendarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/datingListSearchLayout"
            android:layout_toRightOf="@+id/edtPatientName"
            android:layout_marginLeft="@dimen/home_item_separator_size"
            android:layout_marginRight="@dimen/home_item_separator_size"
            android:clickable="true"
            android:background="@drawable/layout_button_with_corner">
            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_calendar_unactive"
                android:layout_marginLeft="@dimen/home_item_separator_size"/>
            <ImageView
                android:id="@+id/ivDropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_dropdown"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/home_item_separator_size"/>
            <TextView
                android:id="@+id/tvCalendarText"
                style="@style/DefaultSmallTextView"
                android:layout_centerVertical="true"
                android:gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/footer_item_separator_background_color"
        android:layout_marginBottom="@dimen/common_padding"/>
    <ListView
        android:id="@+id/lvDatingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:cacheColorHint="@android:color/transparent">
    </ListView>
</LinearLayout>