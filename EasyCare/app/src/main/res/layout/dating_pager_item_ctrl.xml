<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="@dimen/statistic_vertical_padding"
        android:paddingTop="@dimen/statistic_vertical_padding"
        android:background="@color/main_background_color">
        <vn.easycare.layers.ui.components.views.foreground.ForegroundRelativeLayout
            android:id="@+id/datingListSearchLayout"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@drawable/layout_hightlight_button_with_corner"
            custom:foreground="@drawable/layout_item_selector_with_corner">
            <TextView
                android:id="@+id/tvSearch"
                style="@style/DefaultTinyTextView"
                android:textColor="@color/white"
                android:text="@string/dating_list_search"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                />
        </vn.easycare.layers.ui.components.views.foreground.ForegroundRelativeLayout>
        <EditText
            android:id="@+id/edtDatingCode"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/layout_button_with_corner"
            android:textColorHint="@color/textview_color_grey"
            android:hint="@string/dating_list_dating_code"
            android:textColor="@color/textview_color_default"
            android:textSize="@dimen/text_tiny"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/edtPatientName"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/layout_button_with_corner"
            android:textColorHint="@color/textview_color_grey"
            android:hint="@string/dating_list_patient_name"
            android:textColor="@color/textview_color_default"
            android:textSize="@dimen/text_tiny"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/edtDatingCode"/>
        <RelativeLayout
            android:id="@+id/rlSelectCalendarLayout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/datingListSearchLayout"
            android:layout_toRightOf="@+id/edtPatientName"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:background="@drawable/layout_button_with_corner">
            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_calendar_unactive"
                android:layout_marginLeft="@dimen/home_item_separator_size"/>
            <ImageView
                android:id="@+id/ivDropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_dropdown"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/home_item_separator_size"/>
            <TextView
                android:id="@+id/tvCalendarText"
                style="@style/DefaultTinyTextView"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ivDropDown"
                android:layout_toRightOf="@+id/ivCalendar"
                android:gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/vSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/searchLayout"
        android:background="@color/footer_item_separator_background_color"
        android:layout_marginBottom="@dimen/common_padding"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vSeparator">
        <ListView
            android:id="@+id/lvDatingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@null"
            android:cacheColorHint="@android:color/transparent">
        </ListView>
        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvNoData"
            style="@style/DefaultLightLargeTextView"
            android:text="@string/empty_data"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>
</RelativeLayout>